{
  "name": "@maiertech/eslint-config",
  "version": "2.0.0",
  "author": "Thilo Maier <git@maier.asia>",
  "description": "Sharable config for ESLint.",
  "repository": "github:maiertech/eslint-config",
  "license": "MIT",
  "exports": "./index.js",
  "files": [
    "index.js"
  ],
  "engines": {
    "node": ">=12"
  },
  "keywords": [
    "eslint"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "husky install",
    "version": "changeset version",
    "release": "changeset publish",
    "test": "npm run test:eslint && npm run test:prettier",
    "test:eslint": "eslint . --ignore-path .gitignore",
    "test:prettier": "prettier . --ignore-path .gitignore --check",
    "purge": "rm -rf ./node_modules"
  },
  "peerDependencies": {
    "eslint": "^7.26.0"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "babel-eslint": "^10.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.7.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.4.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.16.0",
    "@maiertech/prettier-config": "^1.0.1",
    "eslint": "7.26.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "npm-check": "^5.9.2",
    "prettier": "^2.3.0"
  },
  "eslintConfig": {
    "extends": "./index.js"
  },
  "lint-staged": {
    "**/*.{js,json,md,yml}": "prettier --write"
  },
  "prettier": "@maiertech/prettier-config"
}
